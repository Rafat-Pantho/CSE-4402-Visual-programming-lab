<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.id_220041102_lab_4.PomodoroController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Pomodoro Timer" style="-fx-font-size: 24;" />
    <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 48;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Start" onAction="#startTimer"/>
        <Button text="Pause" onAction="#pauseTimer"/>
        <Button text="Reset" onAction="#resetTimer"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Work (min):"/>
        <TextField fx:id="workField" text="25" prefWidth="50"/>
        <Label text="Break (min):"/>
        <TextField fx:id="breakField" text="5" prefWidth="50"/>
    </HBox>

    <ProgressBar fx:id="progressBar" prefWidth="200"/>

    <Label fx:id="sessionLabel" text="Session: Work" style="-fx-font-size: 16;" />
</VBox>

