<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainRoot" prefHeight="700.0" prefWidth="1006.0" styleClass="dark-root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moviebrowser.MainViewController">

    <!-- TOP NAVIGATION BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="nav-bar" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="app-title" text="ðŸŽ¬ Movie Browser" />

                <TextField fx:id="searchTextField" prefWidth="250.0" promptText="Search for a movie..." styleClass="search-box" />

                <Button fx:id="searchButton" onAction="#handleSearch" styleClass="primary-button" text="Search" />

                <Label styleClass="genre-label" text="Genre:" />

                <ComboBox fx:id="genreComboBox" prefWidth="150.0" promptText="All" styleClass="genre-combo" />

                <Button fx:id="watchLaterButton" onAction="#handleWatchLater" styleClass="watch-later-button" text="Watch Later List" />
            </children>
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
        </HBox>
    </top>

    <!-- MOVIE DISPLAY GRID -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
            <content>
                <FlowPane fx:id="movieGrid" hgap="20" prefWidth="960" styleClass="movie-grid" vgap="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
